{
  "info": {
    "name": "Ecommerce Gateway Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["auth","login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if (json && json.accessToken) {",
              "  pm.environment.set('accessToken', json.accessToken);",
              "  console.log('accessToken saved');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth - Validate (test)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/auth/validate-test",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["auth","validate-test"]
        }
      }
    },
    {
      "name": "Customers - Get list",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/customers",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","customers"]
        }
      }
    }
    ,
    {
      "name": "Order - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customerId\": \"u1\",\n  \"items\": [{ \"productId\": \"p1\", \"quantity\": 1 }],\n  \"total\": 9.99\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/orders",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","orders"]
        }
      }
    },
    {
      "name": "Payments - Toggle Fail (debug)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"forceFail\": true,\n  \"delayMs\": 0\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/payments/debug/fail",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","payments","debug","fail"]
        }
      }
    },
    {
      "name": "Payments - Reset Fail (debug)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"forceFail\": false,\n  \"delayMs\": 0\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/payments/debug/fail",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","payments","debug","fail"]
        }
      }
    },
    {
      "name": "Debug - Circuit Breakers (Order debug)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/debug/circuit-breakers",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["debug","circuit-breakers"]
        }
      }
      ,
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "const key = pm.environment.get('PAYMENT_KEY') || 'http://payment-service:3004';",
              "const expected = pm.environment.get('EXPECT_CIRCUIT');",
              "if (expected) {",
              "  pm.test('Circuit state matches expectation', function() {",
              "    pm.expect(json.circuits[key].state).to.eql(expected);",
              "  });",
              "} else {",
              "  console.log('No EXPECT_CIRCUIT set, skipping assertions');",
              "}"
            ]
          }
        }
      ]
    }
  ]
}
